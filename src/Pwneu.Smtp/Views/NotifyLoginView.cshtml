@model Pwneu.Smtp.Features.Auths.NotifyLogin.Model

<body style="background-color: #010124; width: 100%; font-family: Arial, sans-serif;">
<table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; width: 100%;">
    <tr>
        <td style="padding: 0;"></td>
        <td style="padding: 0;">
            <div style="text-align: center; padding: 20px 0;">
                <table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; width: 100%;">
                    <tr>
                        <td style="text-align: center; width: 100%;">
                            <a href="@Model.WebsiteUrl">
                                <img src="@Model.LogoUrl" height="40" alt="PWNEU" onerror="this.style.display='none';">
                            </a>
                        </td>
                    </tr>
                </table>
            </div>
            <div style="margin: 0 auto; max-width: 600px; background: #ffffff; border-radius: 3px; padding: 10px;">
                <span style="display: none; visibility: hidden;">Someone just logged into your PWNEU account. If this wasn’t you, secure your account immediately.</span>
                <table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; width: 100%;">
                    <tr>
                        <td style="padding: 10px;">
                            <table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; width: 100%;">
                                <tr>
                                    <td>
                                        <p>ℹ️ Here are the details for your recent login to your PWNEU account:</p>
                                        <p>Full Name: <strong>@Model.FullName</strong></p>
                                        <p>Email: <strong>@Model.Email</strong></p>
                                        <p>IP Address: <strong>@Model.IpAddress</strong></p>
                                        <p>User Agent: <strong>@Model.UserAgent</strong></p>
                                        <p>Referer: <strong>@Model.Referer</strong></p>
                                        <p>🚨 If you did not make this login, please secure your account immediately.</p>
                                        <p>🙏 Thank you!</p>
                                        <p>Pwneu Team</p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>

            <div style="text-align: center; padding: 10px 0;">
                <table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; width: 100%;">
                    <tr>
                        <td style="padding: 5px; text-align: center; color: #999;">
                            This email is auto-generated by <a href="@Model.WebsiteUrl" style="text-decoration: underline; color: #999;">PWNEU</a>
                        </td>
                    </tr>
                </table>
            </div>
        </td>
        <td style="padding: 0;"></td>
    </tr>
</table>
</body>