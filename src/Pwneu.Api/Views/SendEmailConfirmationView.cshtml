@model Pwneu.Api.Features.Smtp.SendEmailConfirmation.Model

<body style="background-color: #010124; width: 100%; font-family: Arial, sans-serif;">
    <table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; width: 100%;">
        <tr>
            <td style="padding: 0;"></td>
            <td style="padding: 0;">
                <div style="text-align: center; padding: 20px 0;">
                    <table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; width: 100%;">
                        <tr>
                            <td style="text-align: center; width: 100%;">
                                <a href="@Model.WebsiteUrl">
                                    <img src="@Model.LogoUrl" height="40" alt="PWNEU" onerror="this.style.display='none';">
                                </a>
                            </td>
                        </tr>
                    </table>
                </div>
                <div style="margin: 0 auto; max-width: 600px; background: #ffffff; border-radius: 3px; padding: 10px;">
                    <span style="display: none; visibility: hidden;">Almost there! Click the link to verify your email and get started with PWNEU.</span>
                    <table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; width: 100%;">
                        <tr>
                            <td style="padding: 10px;">
                                <table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; width: 100%;">
                                    <tr>
                                        <td>
                                            <p>👋 Welcome to PWNEU! Here are the credentials you provided during your registration:</p>
                                            <p>Username: <strong>@Model.UserName</strong></p>
                                            <p>Full Name: <strong>@Model.FullName</strong></p>
                                            <p>IP Address: <strong>@Model.IpAddress</strong></p>
                                            <table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; width: auto; margin: 10px auto;">
                                                <tbody>
                                                    <tr>
                                                        <td style="text-align: center;">
                                                            <table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; margin: 0 auto;">
                                                                <tbody>
                                                                    <tr>
                                                                        <td>
                                                                            <a href="@($"{Model.VerifyEmailUrl}?email={Model.EncodedEmail}&confirmationToken={Model.EncodedConfirmationToken}")" target="_blank" style="display: inline-block; background-color: #cff721; color: black; padding: 20px 20px; text-decoration: none; border-radius: 5px;">
                                                                                <strong>Click here to verify your email!</strong>
                                                                            </a>
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                            <p>🚨 If you do not verify your email within 48 hours, your account may be removed.</p>
                                            <p>🚫 If you did not request this registration, please ignore this email. No action will be taken on this account.</p>
                                            <p>🙏 Thank you!</p>
                                            <p>Pwneu Team</p>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>

                <div style="text-align: center; padding: 10px 0;">
                    <table role="presentation" style="border: none; border-spacing: 0; border-collapse: collapse; width: 100%;">
                        <tr>
                            <td style="padding: 5px; text-align: center; color: #999;">
                                This email is auto-generated by <a href="@Model.WebsiteUrl" style="text-decoration: underline; color: #999;">PWNEU</a>
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
            <td style="padding: 0;"></td>
        </tr>
    </table>
</body>